<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:criview="http://schemas.android.com/apk/res/com.online.hall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0.1dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/layitem_line" />

        <RelativeLayout
            android:id="@+id/my_item_layout_listcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:scaleType="center"
                android:src="@drawable/check_layout_phone" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_below="@+id/imageView2"
                android:scaleType="fitXY"
                android:src="@drawable/layitem_line" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/check_selfphone"
                android:layout_toRightOf="@+id/imageView2"
                android:gravity="center_vertical"
                android:text="@string/check_self"
                android:textColor="#000"
                android:textSize="14sp" />

            <com.hall.view.CriButton
                android:id="@+id/check_selfphone"
                criview:style="FILL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/check"
                android:textColor="@color/default_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_item_layout_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:scaleType="center"
                android:src="@drawable/check_layout_cost" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageView01"
                android:scaleType="fitXY"
                android:src="@drawable/layitem_line" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ImageView01"
                android:layout_alignTop="@+id/ImageView01"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/check_yue"
                android:layout_toRightOf="@+id/ImageView01"
                android:gravity="center_vertical"
                android:text="@string/check_yue"
                android:textColor="#000"
                android:textSize="14sp" />

            <com.hall.view.CriButton
                android:id="@+id/check_yue"
                criview:style="FILL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/check"
                android:textColor="@color/default_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_item_layout_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:scaleType="center"
                android:src="@drawable/check_layout_pack" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageView03"
                android:scaleType="fitXY"
                android:src="@drawable/layitem_line" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ImageView03"
                android:layout_alignTop="@+id/ImageView03"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/check_openpack"
                android:layout_toRightOf="@+id/ImageView03"
                android:gravity="center_vertical"
                android:text="@string/check_openpack"
                android:textColor="#000"
                android:textSize="14sp" />

            <com.hall.view.CriButton
                android:id="@+id/check_openpack"
                criview:style="FILL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/check"
                android:textColor="@color/default_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:scaleType="center"
                android:src="@drawable/check_layout_func" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageView02"
                android:scaleType="fitXY"
                android:src="@drawable/layitem_line" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ImageView02"
                android:layout_alignTop="@+id/ImageView02"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/check_openskill"
                android:layout_toRightOf="@+id/ImageView02"
                android:gravity="center_vertical"
                android:text="@string/check_openskill"
                android:textColor="#000"
                android:textSize="14sp" />

            <com.hall.view.CriButton
                android:id="@+id/check_openskill"
                criview:style="FILL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/check"
                android:textColor="@color/default_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:scaleType="center"
                android:src="@drawable/check_layout_language" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageView04"
                android:scaleType="fitXY"
                android:src="@drawable/layitem_line" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ImageView04"
                android:layout_alignTop="@+id/ImageView04"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/check_language"
                android:layout_toRightOf="@+id/ImageView04"
                android:gravity="center_vertical"
                android:text="@string/check_language"
                android:textColor="#000"
                android:textSize="14sp" />

            <com.hall.view.CriButton
                android:id="@+id/check_language"
                criview:style="FILL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/check"
                android:textColor="@color/default_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_item_layout_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/ImageView05"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:scaleType="center"
                android:src="@drawable/check_layout_gift" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ImageView05"
                android:layout_alignTop="@+id/ImageView05"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/check_gift"
                android:layout_toRightOf="@+id/ImageView05"
                android:gravity="center_vertical"
                android:text="@string/check_gift"
                android:textColor="#000"
                android:textSize="14sp" />

            <com.hall.view.CriButton
                android:id="@+id/check_gift"
                criview:style="FILL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/TextView03"
                android:layout_alignBottom="@+id/TextView03"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/check"
                android:textColor="@color/default_white" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/layitem_line" />

    </LinearLayout>

</LinearLayout>