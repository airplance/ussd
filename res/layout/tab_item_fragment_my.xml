<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:voc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/personal_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0.5dp"
    android:layout_marginRight="0.5dp"
    android:background="#fff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_white"
            android:orientation="vertical" >

            <com.hall.view.TopLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.hall.view.TopLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/default_blue" >

                <com.hall.view.CircleImageView
                    android:id="@+id/my_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_img"
                    android:layout_centerHorizontal="true"
                    android:text="18923403769"
                    android:textSize="19sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="20dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/layitem_line" />

                <RelativeLayout
                    android:id="@+id/my_item_layout_listcost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/check_layout_pack" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/imageView2"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/imageView2"
                        android:scaleType="fitXY"
                        android:src="@drawable/layitem_line" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView2"
                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imageView2"
                        android:gravity="center_vertical"
                        android:text="我的账单"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_item_layout_flow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/home_paycharge" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/ImageView01"
                        android:scaleType="fitXY"
                        android:src="@drawable/layitem_line" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ImageView01"
                        android:layout_alignTop="@+id/ImageView01"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ImageView01"
                        android:gravity="center_vertical"
                        android:text="我的流量包"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_item_layout_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/home_other" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/ImageView03"
                        android:scaleType="fitXY"
                        android:src="@drawable/layitem_line" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ImageView03"
                        android:layout_alignTop="@+id/ImageView03"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ImageView03"
                        android:gravity="center_vertical"
                        android:text="我的套餐"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_item_layout_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp" >

                    <ImageView
                        android:id="@+id/ImageView05"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/home_check" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ImageView05"
                        android:layout_alignTop="@+id/ImageView05"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ImageView05"
                        android:gravity="center_vertical"
                        android:text="充值记录查询"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/layitem_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>